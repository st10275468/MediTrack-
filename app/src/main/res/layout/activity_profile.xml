<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0062C1"
        android:backgroundTint="#0062C1"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.TopSquareBottomRounded"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:elevation="4dp"
            android:outlineAmbientShadowColor="#000000">

            <ImageView
                android:id="@+id/imageView4"
                app:srcCompat="@drawable/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp" />

            <ImageView
                android:id="@+id/imageView3"
                app:srcCompat="@drawable/ic_meditrack_logo"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/TabMenu"
            app:tabIndicatorColor="#307BC3"
            app:tabTextColor="#307AC3"
            android:layout_width="403dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/tab_border"
            android:clickable="true"
            android:elevation="4dp"
            android:fadeScrollbars="false">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tbHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Home"
                android:textAlignment="center" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tbSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Search" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tbProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Profile" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tbReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Reminders" />
        </com.google.android.material.tabs.TabLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:contentPadding="10dp"
            android:layout_width="406dp"
            android:layout_height="611dp"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#55A4F0"
                    app:cardCornerRadius="35dp"
                    android:layout_width="346dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="1dp"
                        android:text="Profile"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</LinearLayout>