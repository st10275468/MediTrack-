<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0062C1"
    android:padding="0dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="393dp"
        android:layout_height="151dp"
        android:layout_gravity="center"
        android:outlineAmbientShadowColor="#000000"
        app:cardBackgroundColor="#FDFDFD"
        app:cardElevation="4dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.TopSquareBottomRounded">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_meditrack_logo" />

        <ImageView
            android:id="@+id/imageViewSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_settings" />

    </com.google.android.material.card.MaterialCardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="371dp"
        android:layout_height="592dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FDFDFD"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="8dp"
                app:cardBackgroundColor="#55A4F0"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal"
                    android:text="Nearby Medical Facilities"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="351dp"
                android:layout_height="500dp"
                android:layout_gravity="center|center_horizontal" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
